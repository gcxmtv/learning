package jantar;

import java.util.Scanner;

public class Sistema {

	public static void main(String[] args) {

		Garcom garcom = new Garcom();
		Scanner resposta = new Scanner(System.in);
		Cardapio cardapio = new Cardapio();
		String answer = "";
		
		
		System.out.println("Olá, " + garcom.recepcao + "! \n" + "Seja Bem-vindo(a) ao nosso restaurante virtual."
				+ "\n Você deseja ver nosso cardapio? (sim/nao)");
		answer = resposta.nextLine();

		if (answer.equalsIgnoreCase("sim")) {

			cardapio.getCardapioEntradas();
			cardapio.getCardapioPratos();
			cardapio.getCardapioSobremesa();
			cardapio.getCardapioBebidas();

			System.out.println("Podemos iniciar seu pedido? (sim/nao)");
			answer = resposta.nextLine().toLowerCase();

			if (answer.equals("sim")) {

				System.out.println("Me diga o código do seu pedido conforme esta no cardápio. (Ex.: E1, ou P1, etc.)");
				answer = resposta.nextLine().toLowerCase();

				switch (answer) {

				case "sim":

					System.out.println("Qual seu pedido?");
					break;

				case "nao":

					System.out.println("Entao vai pra pqp!!");
					break;

				}}

			if (answer.equals("nao")) {
				System.out.println("Certo, Você já tem em mente seu pedido ou deseja sair de nosso restaurante virtual? (sim/nao/sair)");
				answer = resposta.nextLine();
				
				
				if (answer.equals("sair")) {
					System.exit(0); }
			}

			resposta.next();

			resposta.close();
		}
	}
}